{
  "name": "food-app-backend",
  "private": true,
  "version": "1.0.0",
  "description": "domain structured graphql api for the food app",
  "main": "index.js",
  "scripts": {
    "test": "ava",
    "dev": "nodemon index.js",
    "lint": "xo --quiet",
    "lint:format": "xo --quiet --write 'src/**/*.js'",
    "precommit": "lint-staged",
    "jobs:restaurants": "node jobs",
    "seed:run": "yarn jobs:restaurants && yarn dev"
  },
  "keywords": [
    "api",
    "node",
    "koa",
    "frontend"
  ],
  "author": "Caio Alcantara",
  "license": "MIT",
  "dependencies": {
    "apollo-server-koa": "^2.4.8",
    "ava": "^1.3.1",
    "axios": "^0.21.1",
    "date-fns": "^2.12.0",
    "dotenv": "^8.0.0",
    "esm": "^3.2.18",
    "graphql": "^14.1.1",
    "graphql-tools": "^4.0.4",
    "hoopa-logger": "^1.1.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.7.0",
    "koa-passport": "^4.1.4",
    "koa-protect": "^1.0.1",
    "koa-router": "^10.0.0",
    "koa2-cors": "^2.0.6",
    "nodemon": "^1.19.1",
    "passport-facebook": "^3.0.0",
    "rethinkly": "^1.4.0",
    "uuid": "^8.3.2"
  },
  "xo": {
    "extends": [
      "prettier"
    ],
    "globals": [
      "it",
      "describe",
      "before",
      "after",
      "afterEach",
      "assert",
      "sinon",
      "expect"
    ],
    "rules": {
      "prefer-promise-reject-errors": 0,
      "no-use-extend-native/no-use-extend-native": 0,
      "camelcase": "off"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint",
      "prettier --semi false --single-quote --trailing-comma --write",
      "git add"
    ]
  },
  "ava": {
    "files": [
      "src/**/**/**/*.spec.js"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-polyfill": "^6.26.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "xo": "^0.24.0"
  }
}
